<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash.NewOrderItemClickedActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.025" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.025" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.975" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.975" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        backgroundTint="@color/white"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        >
        <ImageView
            android:id="@+id/ivNewOrders"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/shoe"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="@id/parent"
            app:layout_constraintStart_toStartOf="@id/parent"
            app:layout_constraintEnd_toEndOf="@id/parent"
            />
        <TextView
            android:id="@+id/tvDateOfOrdersPlaced"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ordered on 24jun,10:24"
            android:layout_marginStart="15dp"
            android:layout_marginTop="250dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="@id/parent"
            app:layout_constraintStart_toStartOf="@id/parent"
            app:layout_constraintEnd_toEndOf="@id/parent"/>
        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TST11890"
            android:layout_marginStart="255dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="250dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="@id/parent"
            app:layout_constraintStart_toStartOf="@id/parent"
            app:layout_constraintEnd_toEndOf="@id/parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID : "
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="251dp"
            android:layout_marginStart="195dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvTitleOfOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parachute bag best in
rains and having good quality and easy to wear nice design and very comfortable."
            android:layout_marginStart="20dp"
            android:layout_marginTop="280dp"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textDirection="ltr"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvPriceOfOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.90"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="360dp"
            android:layout_marginStart="49dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs:"
            android:textStyle="italic"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="360dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvOrderQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13533"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="360dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="259dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Quantity: "
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="360dp"
            android:layout_marginStart="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="235dp"
        android:layout_marginBottom="52dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="425dp"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Shipping Address"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textDirection="ltr"/>
        <TextView
            android:id="@+id/tvSellerName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Samantha Smith"
            android:layout_marginStart="22dp"
            android:inputType="text"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textDirection="ltr"/>
        <TextView
            android:id="@+id/tvSellerAddress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="1124,Palestine Street , Jackson Tower ,
Near City Garden ,New York,USA"
            android:layout_marginStart="22dp"
            android:layout_marginTop="90dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:inputType="textMultiLine"
            android:textDirection="ltr"/>
        <TextView
            android:id="@+id/tvSellerNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="+1 987 654 3210"
            android:layout_marginStart="22dp"
            android:inputType="phone"
            android:layout_marginTop="180dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textDirection="ltr"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnReadyToDispatch"
        android:layout_width="350dp"
        android:backgroundTint="@color/red"
        android:layout_height="wrap_content"
        android:text="Ready to Dispatch"
        android:textSize="18sp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="667dp"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintBottom_toBottomOf="@id/guidelineBottom"

        />

</androidx.constraintlayout.widget.ConstraintLayout>